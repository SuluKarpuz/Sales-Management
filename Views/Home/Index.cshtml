@{
    ViewData["Title"] = "Home Page";
}

<style>
    #slideshow {
        position: relative;
        width: 1100px;
        height: 400px;
        border-radius: 20px;
        overflow: hidden;
        margin: 0 auto;
        padding-bottom: 60%;
    }

    #slideshow img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 1;
        border-radius: 20px;
        object-fit: cover;
        object-position: center;
    }
</style>

<div id="slideshow">
    <img src="~/lib/1.jpg" />
    <img src="~/lib/2.jpg" />
    <img src="~/lib/3.jpg" />
    <img src="~/lib/4.jpg" />
    <img src="~/lib/5.jpg" />
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var images = document.querySelectorAll('#slideshow img');
        var i = 0;

        setInterval(function () {
            if (images[i]) {
                images[i].classList.remove('active');
            }
            i = (i + 1) % images.length;
            if (images[i]) {
                images[i].classList.add('active');
            }
        }, 2000);
    });
</script>
